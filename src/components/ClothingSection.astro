---
import clothingData from '../data/clothing.json';
import ClothingCard from './ClothingCard.astro';
---

<section id="clothing" class="clothing-section fade-in-section">
  <div class="section-content">
    <h2 class="fade-in-section">G'z Radio Apparel</h2>
    <div class="clothing-grid fade-in-section">
      {clothingData.map(item => (
        <ClothingCard 
          id={item.id}
          name={item.name} 
          image={item.images[0]} 
          price={item.price}
          currency={item.currency}
          slug={item.slug}
          inStock={item.inStock}
          colors={item.colors}
          sizes={item.sizes}
        />
      ))}
    </div>
  </div>
</section>

<style>
  .clothing-section {
    position: relative;
    min-height: 100vh;
    padding: 8rem 0 6rem 0;
    text-align: center;
    /* Note: Add a placeholder image named 'clothing-bg.jpg' to public/assets/ */
    background-image: url('/assets/fashion.jpg');
    background-position: center;
    background-repeat: no-repeat;
    background-size: cover;
    background-attachment: fixed;
    margin: 0;
    width: 100vw;
    margin-left: calc(-50vw + 50%);
    display: flex;
    align-items: center;
  }

  .section-content {
    padding: 0 2rem;
    max-width: 1200px;
    margin: 0 auto;
    width: 100%;
  }

  h2 {
    font-size: 2.5rem;
    margin-bottom: 3rem;
    color: var(--accent-color-static);
  }

  .clothing-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 3rem 2.5rem;
  }

  @media (max-width: 768px) {
    .clothing-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 1.5rem;
    }

    .clothing-section {
      padding: 4rem 1rem;
    }

    h2 {
      font-size: 2rem;
    }
  }

  @media (max-width: 480px) {
    .clothing-grid {
      grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
      gap: 1rem;
    }

    .clothing-section {
      padding: 3rem 0.75rem;
    }

    .section-content {
      padding: 0 1rem;
    }

    h2 {
      font-size: 1.75rem;
      margin-bottom: 2rem;
    }
  }

  @media (max-width: 360px) {
    .clothing-grid {
      grid-template-columns: 1fr;
      gap: 1rem;
    }

    .clothing-section {
      padding: 2.5rem 0.5rem;
    }

    .section-content {
      padding: 0 0.5rem;
    }

    h2 {
      font-size: 1.5rem;
      margin-bottom: 1.5rem;
    }
  }
</style>

<script>
  document.addEventListener('scroll', () => {
    const clothingSection = document.querySelector('.clothing-section') as HTMLElement;
    if (!clothingSection) return;

    const rect = clothingSection.getBoundingClientRect();
    const windowHeight = window.innerHeight;

    // Check if the element is in the viewport
    if (rect.top < windowHeight && rect.bottom >= 0) {
      // Calculate the scroll distance relative to the element's top
      const scrollDistance = window.scrollY - clothingSection.offsetTop;
      // Adjust the '0.2' value to change the parallax speed and intensity
      const offset = scrollDistance * 0.2;
      clothingSection.style.backgroundPositionY = `${offset}px`;
    } else {
      // Reset when not in view to avoid large initial offset
      clothingSection.style.backgroundPositionY = '0px';
    }
  });
</script>
