---
import artists from '../data/artists.json';
import ArtistCard from './ArtistCard.astro';
---

<section id="artists" class="artists-section fade-in-section parallax-bg">
  <div class="section-content">
    <h2>Our Artists</h2>
    <p>Click for details</p>
    <div class="artist-grid">
      {artists.map(artist => (
        <ArtistCard 
          slug={artist.slug} 
          name={artist.name} 
          image={artist.image} 
        />
      ))}
    </div>
  </div>
</section>

<style>
  @import url('https://fonts.googleapis.com/css2?family=Rubik+Glitch&display=swap');

  .artists-section {
    position: relative;
    min-height: 100vh;
    padding: 8rem 0 6rem 0;
    text-align: center;
    /* Note: Add a placeholder image named 'artists-bg.jpg' to public/assets/ */
    /* background-image: url('/assets/artists-bg.jpg'); */
    background-attachment: fixed;
    background-position: center;
    background-repeat: no-repeat;
    background-size: cover;
    margin: 0;
    width: 100vw;
    margin-left: calc(-50vw + 50%);
    display: flex;
    align-items: center;
  }

  .section-content {
    padding: 0 2rem;
    max-width: 1200px;
    margin: 0 auto;
    width: 100%;
  }

  h2 {
    font-family: "Rubik Glitch", system-ui !important;
    font-weight: 400;
    font-style: normal;
    font-size: 2.5rem;
    margin-bottom: 2rem;
    color: var(--accent-color-static);
  }

  .artist-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
    max-width: 1200px;
    margin: 0 auto;
  }

  @media (max-width: 768px) {
    .artist-grid {
      grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
      gap: 1rem;
    }

    .artists-section {
      padding: 4rem 1rem;
    }

    h2 {
      font-size: 2rem;
    }
  }

  @media (max-width: 480px) {
    .artist-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 0.75rem;
    }

    .artists-section {
      padding: 3rem 0.75rem;
    }

    .section-content {
      padding: 0 1rem;
    }

    h2 {
      font-size: 1.75rem;
      margin-bottom: 1.5rem;
    }
  }

  @media (max-width: 360px) {
    .artist-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 0.5rem;
    }

    .artists-section {
      padding: 2.5rem 0.5rem;
    }

    .section-content {
      padding: 0 0.5rem;
    }

    h2 {
      font-size: 1.5rem;
      margin-bottom: 1.25rem;
    }
  }
</style>
