---
export interface Props {
  slug: string;
  name: string;
  image: string;
}

const { slug, name, image } = Astro.props;
---

<a href={`/artists/${slug}`} class="artist-card">
  <img src={image} alt={`Photo of ${name}`} loading="lazy" />
  <div class="card-overlay">
    <h3 class="artist-name">{name}</h3>
  </div>
</a>

<style>
  .artist-card {
    position: relative;
    display: block;
    position: relative;
    overflow: hidden;
    border-radius: 8px;
    box-shadow: 0 10px 20px rgba(0,0,0,0.4);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    aspect-ratio: 1 / 1;
    /* Note: Add placeholder images to public/assets/ */
  }

  .artist-card:hover {
    transform: scale(1.05);
    box-shadow: 0 15px 30px rgba(0,0,0,0.6);
  }

  .artist-card img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.4s ease;
  }

  .artist-card:hover img {
    transform: scale(1.1);
  }

  .card-overlay {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    background: linear-gradient(to top, rgba(0,0,0,0.9), transparent);
    padding: 2rem 1rem 1rem;
    text-align: center;
  }

  .artist-name {
    position: absolute;
    bottom: 1rem;
    left: 1rem;
    margin: 0;
    color: var(--text-color-light);
    font-size: 1.5rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 1px;
    z-index: 2;
  }

  .artist-card::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 60%;
    background: linear-gradient(to top, rgba(0, 0, 0, 0.9) 0%, rgba(0, 0, 0, 0) 100%);
    z-index: 1;
    border-radius: 0 0 8px 8px;
    transition: opacity 0.3s ease-in-out;
  }

  .artist-card:hover::after {
    opacity: 0.8;
  }

  /* Mobile Responsiveness */
  @media (max-width: 480px) {
    .card-overlay {
      padding: 1.5rem 0.75rem 0.75rem;
    }

    .artist-name {
      font-size: 1.25rem;
      bottom: 0.75rem;
      left: 0.75rem;
      right: 0.75rem;
      letter-spacing: 0.5px;
      line-height: 1.2;
    }

    .artist-card:hover {
      transform: scale(1.02);
    }

    .artist-card:hover img {
      transform: scale(1.05);
    }
  }

  @media (max-width: 360px) {
    .card-overlay {
      padding: 1.25rem 0.5rem 0.5rem;
    }

    .artist-name {
      font-size: 1.1rem;
      bottom: 0.5rem;
      left: 0.5rem;
      right: 0.5rem;
      letter-spacing: 0.25px;
    }
  }
</style>
