---
export interface Props {
  name: string;
  image: string;
  price: string;
}

const { name, image, price } = Astro.props;
---

<div class="clothing-card fade-in-section">
  <div class="card-image">
    <img src={image} alt={`Photo of ${name}`} loading="lazy" />
  </div>
  <div class="card-info">
    <h3>{name}</h3>
    <p class="price">{price}</p>
  </div>
</div>

<style>
  .clothing-card {
    background-color: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 8px;
    overflow: hidden;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    backdrop-filter: blur(10px);
  }

  .clothing-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
  }

  .card-image img {
    width: 100%;
    height: 300px; /* Fixed height for uniform cards */
    object-fit: cover;
    display: block;
  }

  .card-info {
    padding: 1.5rem;
    text-align: left;
  }

  h3 {
    font-size: 1.25rem;
    margin: 0 0 0.5rem 0;
    color: var(--text-color);
  }

  .price {
    font-size: 1.1rem;
    color: var(--accent-color-static);
    font-weight: 700;
    margin: 0;
  }
</style>
