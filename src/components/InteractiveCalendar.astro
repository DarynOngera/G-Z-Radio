---
import eventsData from '../data/events.json';
---

<div class="calendar-container">
  <button id="calendar-toggle" class="calendar-btn">
    <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
      <path d="M19 3h-1V1h-2v2H8V1H6v2H5c-1.11 0-1.99.9-1.99 2L3 19c0 1.1.89 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zm0 16H5V8h14v11zM7 10h5v5H7z"/>
    </svg>
    View Event Calendar
  </button>
  
  <!-- Calendar Modal -->
  <div id="calendar-modal" class="calendar-modal hidden">
    <div class="calendar-backdrop"></div>
    <div class="calendar-content glass">
      <div class="calendar-header">
        <button id="prev-month" class="nav-btn">‹</button>
        <h3 id="current-month">January 2025</h3>
        <button id="next-month" class="nav-btn">›</button>
        <button id="close-calendar" class="close-btn">✕</button>
      </div>
      
      <div class="calendar-grid">
        <div class="day-header">Sun</div>
        <div class="day-header">Mon</div>
        <div class="day-header">Tue</div>
        <div class="day-header">Wed</div>
        <div class="day-header">Thu</div>
        <div class="day-header">Fri</div>
        <div class="day-header">Sat</div>
        <!-- Calendar days will be generated by JS -->
      </div>
      
      <!-- Event Details Panel -->
      <div id="event-details" class="event-details hidden">
        <h4>Events on <span id="selected-date"></span></h4>
        <div id="events-list"></div>
      </div>
    </div>
  </div>
</div>

<!-- Embed events data for JS -->
<script type="application/json" id="events-data" set:html={JSON.stringify(eventsData)}></script>
<script type="module" src="/js/calendar.js" defer></script>

<style>
  .calendar-btn {
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 215, 0, 0.3);
    color: var(--accent-color-static);
    padding: 0.75rem 1.5rem;
    border-radius: 0.5rem;
    cursor: pointer;
    font-size: 1rem;
    font-weight: 600;
    transition: all 0.3s ease;
    backdrop-filter: blur(10px);
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin: 0 auto 2rem;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }
  
  .calendar-btn:hover {
    background: rgba(255, 215, 0, 0.1);
    transform: translateY(-2px);
  }
  
  .calendar-modal {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1000;
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    visibility: hidden;
    transition: all 0.3s ease;
  }
  
  .calendar-modal.visible {
    opacity: 1;
    visibility: visible;
  }
  
  .calendar-backdrop {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.8);
    backdrop-filter: blur(5px);
  }
  
  .calendar-content {
    position: relative;
    background: rgba(10, 10, 10, 0.9);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 1rem;
    padding: 2rem;
    max-width: 500px;
    width: 90%;
    max-height: 80vh;
    overflow-y: auto;
  }
  
  .calendar-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 1.5rem;
  }
  
  .calendar-header h3 {
    color: var(--accent-color-static);
    margin: 0;
    font-size: 1.25rem;
  }
  
  .nav-btn, .close-btn {
    background: none;
    border: none;
    color: var(--accent-color-static);
    font-size: 1.5rem;
    cursor: pointer;
    padding: 0.25rem;
    border-radius: 0.25rem;
    transition: background 0.2s;
  }
  
  .nav-btn:hover, .close-btn:hover {
    background: rgba(255, 255, 255, 0.1);
  }
  
  .calendar-grid {
    display: grid;
    grid-template-columns: repeat(7, 1fr);
    gap: 0.25rem;
    margin-bottom: 1rem;
  }
  
  .day-header {
    text-align: center;
    font-weight: bold;
    color: var(--accent-color-static);
    padding: 0.5rem;
    font-size: 0.9rem;
  }
  
  .calendar-day {
    aspect-ratio: 1;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 0.25rem;
    cursor: pointer;
    transition: all 0.2s;
    color: var(--secondary-color);
    position: relative;
  }
  
  .calendar-day:hover {
    background: rgba(255, 255, 255, 0.1);
  }
  
  .calendar-day.has-event {
    background: rgba(255, 215, 0, 0.3) !important;
    color: var(--accent-color-static) !important;
    font-weight: bold !important;
    border: 1px solid rgba(255, 215, 0, 0.5) !important;
  }
  
  .calendar-day.has-event::after {
    content: '';
    position: absolute;
    bottom: 2px;
    left: 50%;
    transform: translateX(-50%);
    width: 6px;
    height: 6px;
    background: var(--accent-color-static) !important;
    border-radius: 50%;
    box-shadow: 0 0 4px rgba(255, 215, 0, 0.8) !important;
  }
  
  .calendar-day.other-month {
    opacity: 0.3;
  }
  
  .event-details {
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    padding-top: 1rem;
  }
  
  .event-details h4 {
    color: var(--accent-color-static);
    margin: 0 0 0.75rem 0;
  }
  
  .event-item {
    background: rgba(255, 255, 255, 0.05);
    border-radius: 0.5rem;
    padding: 0.75rem;
    margin-bottom: 0.5rem;
  }
  
  .event-item h5 {
    color: var(--accent-color-static);
    margin: 0 0 0.25rem 0;
  }
  
  .event-item p {
    color: var(--secondary-color);
    margin: 0;
    font-size: 0.9rem;
  }
  
  .hidden {
    display: none;
  }
  
  @media (max-width: 768px) {
    .calendar-content {
      padding: 1.5rem;
      width: 95%;
    }
    
    .calendar-header h3 {
      font-size: 1.1rem;
    }
    
    .day-header {
      font-size: 0.8rem;
      padding: 0.25rem;
    }
    
    .calendar-day {
      font-size: 0.9rem;
    }
  }
</style>
