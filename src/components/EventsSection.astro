---
import eventsData from '../data/events.json';
import InteractiveCalendar from './InteractiveCalendar.astro';
---

<section id="events" class="events-section fade-in-section parallax-bg">
  <div class="section-content">
    <h2>Upcoming Events</h2>
    <InteractiveCalendar />
    <div class="event-list">
      {eventsData.map(event => (
        <div class="event-item">
          <span class="event-date">{new Date(event.date).toLocaleDateString('en-US', { month: 'short', day: 'numeric' })}</span>
          <h3 class="event-title">{event.title}</h3>
          <p class="event-location">{event.location}</p>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  @import url('https://fonts.googleapis.com/css2?family=Rubik+Glitch&display=swap');

  .events-section {
    position: relative;
    min-height: 100vh;
    padding: 8rem 0 6rem 0;
    text-align: center;
    /* Note: Add a placeholder image named 'events-bg.jpg' to public/assets/ */
    background-image: url('/assets/events-bg.jpg');
    background-attachment: fixed;
    background-position: center;
    background-repeat: no-repeat;
    background-size: cover;
    margin: 0;
    width: 100vw;
    margin-left: calc(-50vw + 50%);
    display: flex;
    align-items: center;
  }

  .section-content {
    padding: 0 2rem;
    max-width: 1200px;
    margin: 0 auto;
    width: 100%;
  }

  .events-section h2 {
    font-family: "Rubik Glitch", system-ui !important;
    font-weight: 400;
    font-style: normal;
    font-size: 2.5rem;
    margin-bottom: 2rem;
    color: var(--accent-color-static);
    transform: none !important;
  }

  .event-list {
    max-width: 1000px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 2rem;
  }

  .event-item {
    background-color: rgba(0, 0, 0, 0.7);
    padding: 1.5rem;
    border-left: 4px solid var(--accent-color-static);
    text-align: left;
    transition: transform 0.3s ease, background-color 0.3s ease;
    min-height: 140px;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }

  .event-item:hover {
    transform: translateY(-5px);
    background-color: rgba(0, 0, 0, 0.85);
  }

  .event-date {
    font-family: var(--font-heading);
    color: var(--accent-color-static);
    font-size: 1rem;
    display: block;
    margin-bottom: 0.5rem;
  }

  .event-title {
    font-family: var(--font-body);
    font-weight: 700;
    font-size: 1.25rem;
    color: var(--secondary-color);
    text-transform: none;
    letter-spacing: 0;
    margin: 0 0 0.5rem 0;
    line-height: 1.4;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
  }

  .event-location {
    font-size: 0.9rem;
    color: var(--secondary-color);
    opacity: 0.8;
    margin: 0;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  @media (max-width: 768px) {
    .events-section {
      background-attachment: scroll; /* Fixed attachment can cause issues on mobile */
      width: 100vw;
      margin-left: calc(-50vw + 50%);
      min-height: auto;
    }

    .event-list {
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: 1.5rem;
    }
    
    .event-item {
      min-height: 140px;
    }

    h2 {
      font-size: 2rem;
    }
  }

  @media (max-width: 480px) {
    .event-list {
      grid-template-columns: 1fr;
      gap: 1.25rem;
    }

    .event-item {
      min-height: 130px;
      padding: 1.25rem;
    }

    .event-title {
      font-size: 1.1rem;
    }

    .event-location {
      font-size: 0.85rem;
    }
  }
</style>
