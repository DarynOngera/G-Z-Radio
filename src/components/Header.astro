---
import Navigation from './Navigation.astro';
---

<header>
  <div class="logo">
    <a href="/">G'zRadio</a>
  </div>
  <div class="header-actions">
    <div id="cart-container" class="cart-container"></div>
    <Navigation />
  </div>
</header>

<style>
  @import url('https://fonts.googleapis.com/css2?family=Rubik+Glitch&display=swap');

  header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem 2rem;
    background-color: transparent; /* Sits on top of the hero section */
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    z-index: 10;
  }

  .logo a {
    font-family: "Rubik Glitch", system-ui !important;
    font-weight: 400;
    font-style: normal;
    font-size: 1.5rem;
    text-decoration: none;
    text-transform: uppercase;
    letter-spacing: 1.5px;
    line-height: 1.2;
    color: var(--accent-color-static);
    display: inline-block;
    transform: rotate(-2deg) skewX(-5deg);
    transition: transform 0.3s ease;
  }

  .logo a:hover {
    transform: rotate(-2deg) skewX(-5deg) scale(1.05);
  }

  .header-actions {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .cart-container {
    display: flex;
    align-items: center;
  }

  @media (max-width: 768px) {
    .header-actions {
      gap: 0.75rem;
    }
  }
</style>
